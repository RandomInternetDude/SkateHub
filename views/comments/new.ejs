<% include ../partials/header %>



<div class="container">
    <div class="row">
            <h1 style="text-align: center"> Add New Comment to <%=skatepark.name%></h1>
            <div style="width: 50%; margin: 25px auto;">
                <form action="/skateparks/<%= skatepark._id %>/comments" method="POST" >
                    <div class="form-group">
                         <input class="form-control" type="text" name="comment[text]" placeholder="Enter Comment here">
                    </div>
                    
                    <div class="form-group">
                          <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                 <a class="btn btn-primary" href="/skateparks">Go Back</a>
            </div>
            
    </div>

</div>

<% include ../partials/footer %>